<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:id="@+id/tipoAtividade" android:layout_marginTop="20dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginStart="20dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:id="@+id/nomeAtividade"
            android:layout_marginTop="0dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp" android:layout_below="@+id/tipoAtividade"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/diaAtividade"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/nomeAtividade"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horasalaAtividade"
            android:textColor="@color/colorSecondary"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/diaAtividade"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"/>
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp" android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp">

        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/apresentadorAtividade"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/empresaAtividade" android:layout_marginTop="5dp"
                    android:layout_below="@+id/apresentadorAtividade"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>